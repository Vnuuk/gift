<script>
        $(document).ready(function () {
            var i = 0;
            var images = ['/Content/images/kazan-main.JPG', '/Content/images/kul-sharif.JPG', '/Content/images/shalapin_palas.JPG'];
            var max = images.length - 1;

            $(document).on('click', '#btn-next', function () {
                if (i == max) {
                    i = 0;
                    $('#wallpaper').fadeOut(500);
                    setTimeout(function() {
                        $('#wallpaper').css('background-image', 'url("' + images[0] + '")').fadeIn(500);
                    }, 500);

                    console.log(i);
                    return;
                }

                i++;
                $('#wallpaper').fadeOut(500);
                setTimeout(function () {
                    $('#wallpaper').css('background-image', 'url("' + images[i] + '")').fadeIn(500);
                }, 500);

                console.log(i);
            });

            $(document).on('click', '#btn-prev', function () {
                if (i == 0) {
                    i = max;
                    $('#wallpaper').fadeOut(500);
                    setTimeout(function () {
                        $('#wallpaper').css('background-image', 'url("' + images[max] + '")').fadeIn(500);
                    }, 500);

                    console.log(i);
                    return;
                }

                i--;
                $('#wallpaper').fadeOut(500);
                setTimeout(function () {
                    $('#wallpaper').css('background-image', 'url("' + images[i] + '")').fadeIn(500);
                }, 500);

                console.log(i);
            });

        });
</script>